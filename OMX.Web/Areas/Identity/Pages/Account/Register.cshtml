@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-t-90 p-b-30">
            <span class="login100-form-title p-b-40">
                Register 
            </span>
            <br />           
            
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="login100-form validate-form">
                <div class="text-center p-t-55 p-b-30">
                    <span class="txt1">
                        Create a new account
                    </span>
                </div>
                <br />
                <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter email: ex@abc.xyz">
                    <input asp-for="Input.Email" class="input100" placeholder="Email" required />
                    <span asp-validation-for="Input.Email" class="focus-input100"></span>
                    <span class="focus-input100"></span>
                </div>
                <br />
                <div class="wrap-input100 validate-input m-b-16">
                    <input asp-for="Input.FullName" class="input100" placeholder="Name" required />
                    <span asp-validation-for="Input.FullName" class="focus-input100"></span>
                    <span class="focus-input100"></span>
                </div>
                <br />
                <div class="wrap-input100 validate-input m-b-20" data-validate="Please enter password">
                    <span class="btn-show-pass">
                        <i class="fa fa fa-eye"></i>
                    </span>
                    <input asp-for="Input.Password" class="input100" placeholder="Password" required />
                    <span asp-validation-for="Input.Password" class="focus-input100"></span>
                    <span class="focus-input100"></span>
                </div>
                <br />
                <div class="wrap-input100 validate-input m-b-20" data-validate="Please enter password">
                    <span class="btn-show-pass">
                        <i class="fa fa fa-eye"></i>
                    </span>
                    <input asp-for="Input.ConfirmPassword" class="input100" placeholder="Confirm Password" required />
                    <span asp-validation-for="Input.ConfirmPassword" class="focus-input100"></span>
                    <span class="focus-input100"></span>
                </div>
                <br />
                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        Register!
                    </button>
                </div>
                <br />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
