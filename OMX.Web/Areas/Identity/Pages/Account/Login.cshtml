@page
@model LoginModel

@{

}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-t-90 p-b-30">

            <span class="login100-form-title p-b-40">
                Login
            </span>
            <br />
            <div>
                @if (Model.ExternalLogins != null)
                {
                    <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <button type="submit" class="btn-login-with bg1 m-b-10" name="provider"
                                    value="@Model.ExternalLogins.First().Name" title="Log in with @Model.ExternalLogins.First().DisplayName">
                                <i class="fa fa-facebook-official"> Login with Facebook</i>
                            </button>

                            <br />
                            <button type="submit" class="btn-login-with bg2" name="provider"
                                    value="@Model.ExternalLogins.Skip(1).First().Name" title="Log in with @Model.ExternalLogins.Skip(1).First().DisplayName">
                                <i class="fa fa-google"> Login with Google</i>
                            </button>
                        </div>
                    </form>
                }

            </div>
            <br />
            <form method="post" class="login100-form validate-form">
                <div class="text-center p-t-55 p-b-30">
                    <span class="txt1">
                        Login with email
                    </span>
                </div>
                <br />
                <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter email: ex@abc.xyz">
                    <input asp-for="Input.Email" class="input100" placeholder="Email" required />
                    <div style="position:absolute">
                        <span asp-validation-for="Input.Email" style="color:red"></span><br />
                    </div>

                </div>
                <br />

                <br />
                <div class="wrap-input100 validate-input m-b-20" data-validate="Please enter password">                    
                    <input asp-for="Input.Password" class="input100" placeholder="Password" required />
                    <div style="position:absolute">
                        <span asp-validation-for="Input.Password" style="color:red"></span><br />
                    </div>

                </div>
                <br />
                <br />

                <div class="form-group" style="color:whitesmoke">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        Login
                    </button>
                </div>
                <br />
                <div class="flex-col-c p-t-224">
                    <span class="txt2 p-b-10">
                        Don’t have an account?
                    </span>
                    <a href="/identity/account/register" class="txt3 bo1 hov1">
                        Sign up now
                    </a>
                </div>
                <div class="flex-col-c p-t-224">
                    <span class="txt2 p-b-10">
                        Forgot your password?
                    </span>
                    <a href="/identity/account/forgotpassword" class="txt3 bo1 hov1">
                        Reset it!
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


