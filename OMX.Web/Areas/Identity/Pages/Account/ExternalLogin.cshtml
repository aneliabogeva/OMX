@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}
@Html.Partial("_HeaderSection", "Success!")
<br />
<h4 style="text-align:center">Associate your @Model.LoginProvider account.</h4>
<hr />

<p class="text-info" style="text-align:center">
    You've successfully authenticated with <strong>@Model.LoginProvider</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<form id="profileForm" asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <fieldset>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.FullName">Your Name</label>
            <input asp-for="Input.FullName" class="form-control" />
            <p><small>Used as contact information for your listings.</small></p>
            <span asp-validation-for="Input.FullName" class="text-danger"></span>
        </div>
        <button type="submit" class="next action-button">Register</button>
    </fieldset>
</form>
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

