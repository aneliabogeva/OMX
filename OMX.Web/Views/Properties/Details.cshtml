@using Microsoft.AspNetCore.Identity
@model HomePropertiesViewModel
@inject SignInManager<User> SignInManager

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        @if (!Model.ImageNames.Any())
        {
            <div class="carousel-item active">
                <img class="d-block w-100" width="300" height="500" src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/600px-No_image_available.svg.png">
            </div>
        }
        else
        {
            <div class="carousel-item active">
                <img class="d-block w-100" width="300" height="500" src="~/images/@Model.Id/@Model.ImageNames.First().Name">
            </div>
            @foreach (var image in Model.ImageNames.Skip(1))
            {
                <div class="carousel-item">
                    <img width="300" height="500" class="d-block w-100" src="~/images/@Model.Id/@image.Name" alt="Second slide">
                </div>
            }
        }
    </div>
    @if (Model.ImageNames.Count > 2)
    {
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    }
</div>


<div class="row">
    <div class="col-12">
        <h2 style="text-align:center">
            @Model.Title  @if (Model.Price > 0)
            {
                <i class="fas fa-dollar-sign"> - @Model.Price @Model.Currency.ToString()</i>
            }
        </h2>
        <h4 style="text-align:center; color:green"><i class="fas fa-map-marker-alt"> Location :</i> @Model.Address.City</h4>
        
    </div>
</div>
<br />
<div class="row">
    <div class="col-2">
    </div>
    <div class="col-2">
        <i class="fas fa-check-circle"> Features:</i>
        @foreach (var item in Model.Features)
        {
            <div>
                <i class="fas fa-check"> @item.Feature.Name</i>
            </div>

        }
    </div>
    <div class="col-2" style="margin-left:4px;">
        <i class="fas fa-bed"> Bedrooms :  @Model.NumberOfBedrooms</i>
        <i class="fas fa-bath">  Bathrooms : @Model.NumberOfBathrooms</i>
        <i class="fas fa-building">  Floor : @Model.Floor</i>
    </div>
    <p class="col-3">
        <i class="fas fa-warehouse"> Indoor Area :  @Model.IndoorArea sqm</i>
        <i class="fas fa-warehouse">  Outdoor Area : @Model.OutdoorArea sqm</i>
        <i class="fas fa-warehouse"> Landplot Size : @Model.LandPlotSize sqm</i>
    </p>
</div>
<br />
<br />
<div class="row">
    <div class="col-2">
    </div>
    <div class="col-9">
        <p><i class="fas fa-text-height" style="font-size:larger"> Description: </i><br />@Model.Description</p>
    </div>
</div>
<div asp-validation-summary="ModelOnly"></div>


@if (this.User.Identity.Name != Model.User.Email)
{
    @Html.Partial("_SendMessageToOwner", Model)
}
