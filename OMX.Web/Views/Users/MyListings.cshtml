<br />
<h4 style="text-align:center">Listings waiting for approval</h4>
<hr class="my-4">
@if (inactiveListingsCount == 0)
{
    <h5 style="text-align:center">You have no listings waiting for approval.</h5>
}
@foreach (var property in Model.Where(e => !e.IsApproved))
{

    <div class="row">
        <div class="col-md-2">
            <img class="media-object" src="~/images/@property.Id/@property.ImageNames.Select(e=> e.Name).First()" width="120">
        </div>

