            <p><strong>Bathrooms: </strong>@property.NumberOfBathrooms</p>
            <p><strong>Bedrooms: </strong>@property.NumberOfBedrooms</p>
            <p><strong>Indoor Area: </strong>@property.IndoorArea SQM</p>
        </div>
        <div class="col-md-3">
            <p><strong>Outdoor Area: </strong>@property.OutdoorArea SQM</p>
            <p>
                <strong>Landplot Size: </strong><span>
                    @property.LandPlotSize SQM
                </span>
            </p>
            <p><strong>Price: </strong>@property.Price @property.Currency.ToString()</p>
        </div>
    </div>
    
}