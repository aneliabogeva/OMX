    <div class="row">
        <div class="col-5">

        </div>
        <div class="col-7">
            <a asp-controller="Properties" asp-action="Details" asp-route-id="@property.Id" class="btn btn-primary">Details</a>
            <a asp-controller="Properties" asp-action="Edit" asp-route-id="@property.Id" class="btn btn-success">Edit</a>
